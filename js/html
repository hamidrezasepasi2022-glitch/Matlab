/*using stack dsa as collector of the cotents numbers and operators*/
class stack{
    constructor(capa){
        this.capa = capa;
        this.data = new Array(capa);        
        this.capacity = capa;
        this.counter = 0;
    }

    push(element){
        if( this.counter < this.data.length ){
        this.data[this.counter] = element;
        this.counter++;
        }else{
            let newdata = new Array(this.capacity*2);
            newdata = this.data.slice(0,this.capacity);
            this.capacity = newdata.length;
            newdata[this.counter] = element;
            this.data = newdata; 
        }}

    pop(){
        if(this.counter === 0){return null;

        }let tempdata = this.data[this.counter - 1];
            this.data[this.counter - 1] = null;    
            this.counter --;
            
        return tempdata;}

    

    isEmpty(){
        return this.counter === 0;
    }


    }
    








