let ops = ["+","-","/","*"];


function operator(a,b,c){
    switch(b){
        case"+":
        return Number(a) + Number(c);
    case "-":
        return Number(a) - Number(c);
    case "/":
        return Number(a) / Number(c);
    case "*":
        return Number(a) * Number(c);
            
    }
}
let equ = document.getElementById("eq").onclick = function(){
    let numset = new stack(10);
    let operset = new stack(10);

    let x = header.textContent;
    let count = 0;
    let oper = null;
    for(let i = 0 ; i < x.length;i++){
        if(ops.includes(String(x[i]))){operset.push(x[i]);
            numset.push(x.slice(count,i));
            count = i + 1 ;
            }
        }

    if(count === 0){document.getElementById("h3").textContent = "Invalid Operation!!!!!"

    }else{
        
        numset.push(x.slice(count));

        // let result = 0;
        
        while(!operset.isEmpty()){
           
        let right = Number(numset.pop());
        let op = operset.pop();
        let left = Number(numset.pop());
        let result = operator(left, op, right);
        numset.push(result);
           
            // let a = numset.pop();
            // let b = operset.pop();
            // let c = numset.pop();
            // result += operator(a,b,c);
        }
        header.textContent = numset.pop();
        
    }
    
    
        }




